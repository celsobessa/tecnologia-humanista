{% if pagelist %}
<section class="pagelist">

  {%- for post in pagelist -%}
  <article>

    <h2 class="article-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>

    {% if post.data.date %}<p class="article-meta"><time datetime="{{ post.data.date | dateymd }}">{{ post.data.date | datefriendly }}</time></p>{% endif %}

    <p>{{ post.data.description }}</p>
    <ul class="keep-reading">
    <li><a href="{{ post.url }}">sumário</a></li>
    {% if post.data.sourceUrl %}<li><a href="{{ post.data.sourceUrl }}">original em {{ post.data.sourceTitle }} (em {{ post.data.sourceLanguageText }})</a></li>{% endif %}
    </ul>

  </article>
  {%- endfor -%}

</section>
{% endif %}
{% if pagination.href.previous or pagination.href.next %}
<nav class="pagenav">

  {% if pagination.href.previous %}
    <p><a href="{{ pagination.href.previous }}">anterior</a></p>
  {% endif %}

  {% if pagination.href.next %}
    <p><a href="{{ pagination.href.next }}">próximo</a></p>
  {% endif %}

</nav>
{% endif %}
